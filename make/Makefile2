CROSS_COMPILE=

ifeq ($(CC),)
	CC=$(CROSS_COMPILE)gcc
endif

ifeq ($(CFLAGS),)
	CFLAGS= -g -Wall -Werror
endif

#HFILES= htu21d_sensor/htu21d_sensor.h

all: client server
default: client server

client : client.o
	$(CROSS_COMPILE)$(CC) $(CFLAGS) -o client client.o

server : server.o
	$(CROSS_COMPILE)$(CC) $(CFLAGS) -o server server.o

client.o: client_server/client.c
	$(CROSS_COMPILE)$(CC) $(CFLAGS) -c client_server/client.c

server.o: client_server/server.c
	$(CROSS_COMPILE)$(CC) $(CFLAGS) -c htu21d_sensor/htu21d_sensor.c client_server/server.c

clean :
	rm -f client server *.o
